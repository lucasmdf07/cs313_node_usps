<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body class="genres">

  <% include ../partials/nav.ejs %>

  <div id="myCarousel" class="carousel slide">
    <!-- Wrapper for slides -->
    <div class="carousel-inner">

      <% data.forEach(function(item, index) { %>
      <div class=<%-index === 0 ? "\'item active carousel-item\'" : "\'item carousel-item\'"%>>
        <img class="background" src=<%= item.pictures + "_50x74.jpg" %> alt=<%- item.name + " Background"%>>
        <div class="description">
          <img class="poster" src=<%= item.pictures + "_500x740.jpg" %> alt=<%- item.name + " Poster"%> />
          <div>
              <h3><%- item.name %></h3>
              <p><%- item.description %></p>
              <a class="buyNow" style=<%- "\'background: " + item.colors.secondary +"\'"%> href=<%- item.link %>>
                <!-- <img src={vimeoButton}/>  -->
                <svg viewBox="0 0 20 20" preserveAspectRatio="xMidYMid" tabindex="-1"><polygon class="fill" points="1,0 20,10 1,20"></polygon></svg>
                Buy Now</a>
              <a class="trailer" href=<%- item.link %>>Watch Trailer</a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <h2 class="selected"><%- selected %></h2>
</body>
</html>